<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="static.mapper.Mapper"></mapper>

<!-- 1. 투어상품 추가 -->
<insert id="insertTour" parameterType="com.itwill.my_real_korea.dto.Tour">
	<selectKey resultType="java.lang.Integer" keyProperty="to_no" order="AFTER">
		select tour_to_no.seq.nextval from dual
	</selectKey>
	insert into tour(to_no,to_name,to_type,to_time,to_person,to_meet,to_price,to_info,to_notice,to_count,city_no)
	values(#{to_no},#{to_name},#{to_type},#{to_time},#{to_person},#{to_meet},#{to_price},#{to_info},#{to_notice},#{to_count},#{city_no})
</insert>
<!-- 2. 투어상품 수정 -->
<update id="updateTour" parameterType="java.lang.Integer" resultType="com.itwill.my_real_korea.dto.Tour">
	update tour set to_name=#{to_name},to_type=#{to_type},to_time=#{to_time},to_person=#{to_person},to_meet=#{to_meet},to_price=#{to_price},to_info=#{to_info},to_notice=#{to_notice},city_no=#{city_no} where to_no=#{to_no}
</update>
<!-- 3. 투어상품 리스트 전체 출력 -->
<select id="selectAll" resultType="com.itwill.my_real_korea.dto.Tour">
	select * from tour
</select>
<!-- 4. 투어상품 상품번호로 상세보기 -->
<select id="seletByToNo" parameterType="java.lang.Integer" resultType="com.itwill.my_real_korea.dto.Tour">
	select * from tour where to_no=#{to_no}
</select>
<!-- 5. 키워드로 투어상품 검색 -->
<select id="selectByKeyword" parameterType="map" resultType="com.itwill.my_real_korea.dto.Tour">
	select * from tour where to_name like #{keyword} order by to_no desc
</select>
<!-- 6. 지역으로 투어상품 검색 -->
<select id="selectByCityNo" parameterType="java.lang.Integer" resultType="com.itwill.my_real_korea.dto.Tour">
	select * from tour where to_type=#{to_type}
</select>
<!-- 7. 여행타입으로 투어상품 검색 -->
<select id="selectByToType" parameterType="java.lang.Integer" resultType="com.itwill.my_real_korea.dto.Tour">
	select * from toyr to_type=#{to_type}
</select>
<!-- 8. 투어상품 삭제 -->
<delete id="deleteTour" parameterType="com.itwill.my_real_korea.dto.Tour">
	delete tour where to_no=#{to_no}
</delete>